<h1>Posts</h1>
<%= link_to "Create", new_post_path %>
<p><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td>
          <%= link_to "Show", post_path(post) %>
          <%= link_to "Update", edit_post_path(post) %>
          <%= link_to 'Delete', post, method: :delete, data: {confirm: "Are you sure?"} %>
        </td>
      </tr>
    <% end %>
</tbody>
</table>